<Window x:Class="REST_Client.View.CarView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:REST_Client.View"
        xmlns:viewmodel="clr-namespace:REST_Client.ViewModel"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="MovieView" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:CarViewModel/>
    </Window.DataContext>
    <Grid>
        <Button Content="Get all cars" HorizontalAlignment="Left" Margin="358,186,0,0" VerticalAlignment="Top" Width="75" Command="{Binding RefreshCars}"/>
        <Image gif:ImageBehavior.AnimatedSource="Images/loading.gif" Visibility="{Binding LoadingVisibility}"/>
    </Grid>
  
</Window>
